var parsedObject = new global.JSON().decode(jsonObject);
var objectVariables = (Object.keys(parsedObject));
for (var i = 0; i < objectVariables.length; i++) {
	var key = objectVariables[i];
	var value = parsedObject[key];
	
	evaluator.putVariable(key, value);
}

// Evaluate server_script and output result in "sample output server"
current.sample_output_server = evaluator.evaluateScript(current, 'server_script', {x: {}});
current.update();

// Refresh in place
